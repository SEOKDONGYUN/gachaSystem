@code {
    private List<GachaItem> ssrItems = new();
    private HashSet<int> selectedPickupIds = new();
    private GachaResult? lastResult;
    private bool isLoading = false;
    private string currentGachaType = "";
    private string errorMessage = "";
    private Guid animationKey = Guid.NewGuid();
    private string activeTab = "normal";
    private bool showProbabilityTable = false;

    // í”„ë¡ íŠ¸ì—”ë“œ ëˆ„ì  í†µê³„
    private GachaTypeStatistics normalStats = new();
    private GachaTypeStatistics pickupStats = new();

    private class GachaTypeStatistics
    {
        public int TotalPulls { get; set; } = 0;
        public Dictionary<int, ItemStats> Items { get; set; } = new();
    }

    private class ItemStats
    {
        public string Name { get; set; } = string.Empty;
        public Rarity Rarity { get; set; }
        public int Count { get; set; } = 0;
    }

    protected override void OnInitialized()
    {
        // SSR ì•„ì´í…œ ëª©ë¡ ë¡œë“œ
        var allItems = GachaTable.Instance.GetGachaPool("pickup");
        ssrItems = allItems.Where(item => item.Rarity == Rarity.SSR)
                          .OrderBy(item => item.Id)
                          .ToList();
    }

    private void SwitchTab(string tab)
    {
        activeTab = tab;
    }

    private void ToggleProbabilityTable()
    {
        showProbabilityTable = !showProbabilityTable;
    }

    private List<ProbabilityInfo> GetConfirmProbabilityTable()
    {
        var poolName = activeTab == "normal" ? "confirm" : "pickup-confirm";
        return BuildTable(poolName, includeLowRarity: false);
    }

    private List<ProbabilityInfo> GetProbabilityTable()
    {
        var poolName = activeTab == "normal" ? "normal" : "pickup";
        return BuildTable(poolName, includeLowRarity: true);
    }

    private List<ProbabilityInfo> BuildTable(string poolName, bool includeLowRarity)
    {
        var result = new List<ProbabilityInfo>();
        var pool = GachaTable.Instance.GetGachaPool(poolName);
        var boostMultiplier = GachaTable.Instance.Settings.BoostMultiplier;

        if (activeTab == "pickup")
        {
            // í”½ì—… ê°€ì± : SSR ì²˜ìŒ 3ê°œë¥¼ ê°œë³„ "í”½ì—… ëŒ€ìƒ1, 2, 3"ìœ¼ë¡œ, ë‚˜ë¨¸ì§€ SSRì„ ê°œë³„ "í”½ì—… ë¹„ëŒ€ìƒ1, 2..."ìœ¼ë¡œ
            var ssrItems = pool.Where(x => x.Rarity == Rarity.SSR).OrderBy(x => x.Id).ToList();
            var pickupSsrItems = ssrItems.Take(3).ToList();
            var nonPickupSsrItems = ssrItems.Skip(3).ToList();

            // í”½ì—… ëŒ€ìƒ ê°œë³„ í‘œì‹œ (SSR ì²˜ìŒ 3ê°œ)
            AddPickupSsr(result, pickupSsrItems, boostMultiplier, isPickupTarget: true);

            // í”½ì—… ë¹„ëŒ€ìƒ ê°œë³„ í‘œì‹œ (ë‚˜ë¨¸ì§€ SSR)
            AddPickupSsr(result, nonPickupSsrItems, boostMultiplier, isPickupTarget: false);

            // SR (ë° R) ì•„ì´í…œë“¤ì€ ì´ë¦„ ê·¸ëŒ€ë¡œ ê°œë³„ í‘œì‹œ
            var nonSsrItems = includeLowRarity
                ? pool.Where(x => x.Rarity != Rarity.SSR).OrderByDescending(x => x.Rarity).ThenBy(x => x.Id)
                : pool.Where(x => x.Rarity == Rarity.SR).OrderBy(x => x.Id);

            AddItems(result, nonSsrItems);
        }
        else
        {
            // ì¼ë°˜ ê°€ì± : ëª¨ë“  ì•„ì´í…œì„ ê°œë³„ í‘œì‹œ
            AddItems(result, pool.OrderByDescending(x => x.Rarity).ThenBy(x => x.Id));
        }

        return result;
    }

    private void AddPickupSsr(List<ProbabilityInfo> result, List<GachaItem> items, int boostMultiplier, bool isPickupTarget)
    {
        for (int i = 0; i < items.Count; i++)
        {
            var item = items[i];
            int weight = isPickupTarget ? item.BaseWeight + boostMultiplier : item.BaseWeight;
            double percentage = (double)weight / 100;
            result.Add(new ProbabilityInfo
            {
                Name = isPickupTarget ? $"í”½ì—… ëŒ€ìƒ{i + 1}" : $"í”½ì—… ë¹„ëŒ€ìƒ{i + 1}",
                Rarity = Rarity.SSR,
                Weight = percentage.ToString("F2")
            });
        }
    }

    private void AddItems(List<ProbabilityInfo> result, IEnumerable<GachaItem> items)
    {
        foreach (var item in items)
        {
            double percentage = (double)item.BaseWeight / 100;
            result.Add(new ProbabilityInfo
            {
                Name = item.Name,
                Rarity = item.Rarity,
                Weight = percentage.ToString("F2")
            });
        }
    }

    private void TogglePickup(int id, bool isChecked)
    {
        if (isChecked)
        {
            if (selectedPickupIds.Count < 3)
            {
                selectedPickupIds.Add(id);
            }
        }
        else
        {
            selectedPickupIds.Remove(id);
        }
    }

    private void UpdateStatistics(GachaResult result, bool isPickup)
    {
        var stats = isPickup ? pickupStats : normalStats;

        stats.TotalPulls += result.Result.Count;

        foreach (var item in result.Result)
        {
            if (stats.Items.ContainsKey(item.Id))
            {
                stats.Items[item.Id].Count++;
            }
            else
            {
                stats.Items[item.Id] = new ItemStats
                {
                    Name = item.Name,
                    Rarity = item.Rarity,
                    Count = 1
                };
            }
        }
    }

    private List<ItemStats> GetSortedStats(Dictionary<int, ItemStats> items)
    {
        return items.Values
            .OrderByDescending(x => x.Rarity)
            .ThenBy(x => x.Name)
            .ToList();
    }

    private void ResetCurrentTabStatistics()
    {
        if (activeTab == "normal")
        {
            normalStats = new GachaTypeStatistics();
        }
        else if (activeTab == "pickup")
        {
            pickupStats = new GachaTypeStatistics();
        }
        errorMessage = "";
    }

    private void PullNormalGacha()
    {
        isLoading = true;
        currentGachaType = "normal";
        errorMessage = "";

        try
        {
            lastResult = GachaService.PullGacha();
            UpdateStatistics(lastResult, isPickup: false);
            animationKey = Guid.NewGuid(); // ì• ë‹ˆë©”ì´ì…˜ ë‹¤ì‹œ ì¬ìƒ
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
        finally
        {
            isLoading = false;
            currentGachaType = "";
        }
    }

    private void PullPickupGacha()
    {
        if (selectedPickupIds.Count != 3)
        {
            errorMessage = "ì •í™•íˆ 3ê°œì˜ SSR ìºë¦­í„°ë¥¼ ì„ íƒí•´ì•¼ í•©ë‹ˆë‹¤.";
            return;
        }

        isLoading = true;
        currentGachaType = "pickup";
        errorMessage = "";

        try
        {
            lastResult = GachaService.PullPickupGacha(selectedPickupIds.ToList());
            UpdateStatistics(lastResult, isPickup: true);
            animationKey = Guid.NewGuid(); // ì• ë‹ˆë©”ì´ì…˜ ë‹¤ì‹œ ì¬ìƒ
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
        finally
        {
            isLoading = false;
            currentGachaType = "";
        }
    }
}
